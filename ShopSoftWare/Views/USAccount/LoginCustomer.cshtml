@model ShopSoftWare.Models.LoginCustomer
@{
    Layout = "/Views/Shared/_LayoutUser.cshtml";
}

@section titlePage{Đăng nhập}

<div class="">
    <h2 style="text-transform:uppercase; margin-top:10px;">Đăng nhập</h2>
    <br />
    <div class="row">
        <div class="col-md-6 col-12">
            @using (Html.BeginForm("LoginCustomer", "USAccount", FormMethod.Post))
            {
                <br />
                @Html.ValidationSummary(false, "", new { @class = "text-danger " })
                <br />
                <div class="form-group">
                    <label for="username">Tài khoản</label>
                    @Html.TextBoxFor(x => x.username, new { @class = "form-control ", @id = "username", @placeholder = "Tài khoản" })
                    <p class="err-user text-danger"></p>
                </div>

                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    @Html.PasswordFor(x => x.password, new { @class = "form-control ", @id = "password", @placeholder = "Mật khẩu" })
                    <p class="err-pass text-danger"></p>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block my-5" id="login">Đăng nhập</button>
                </div>
            }
        </div>
        <div class="col-md-6 col-12" style="text-transform:uppercase; font-size:25px; text-align:center; margin-top:50px;">
            <p class="text-primary">Cám ơn bạn đã luôn đồng hành và tin cậy các sản phẩm tại cửa hàng.</p>
        </div>

    </div>
</div>

