
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model List<ShopSoftWare.Models.CartItem>

@section titlePage{Giỏ hàng}

@section jsFooter{
    <script src="/Assets/client/js/cartController.js"></script>
}

@if (Model.Count > 0)
{
    <table class="table table-hover">
        <thead class="bg-light">
            <tr>
                <th>Tên mặt hàng</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Hình ảnh</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var items in Model)
            {
                <tr>
                    <td>@items.product.NameProduct</td>
                    <td>@items.product.Price.GetValueOrDefault(0).ToString("N0")</td>
                    <td><input type="text" class="txtQuantity" data-id="@items.product.IDProduct" value="@items.quantity" style="width: 68px;text-align: center;"></td>
                    <td><img src="@items.product.Images" height="60px" alt="hinh-anh-san-pham"></td>
                    <td>@((items.product.Price.GetValueOrDefault(0) * items.quantity).ToString("N0"))</td>
                    <td>
                        <a href="#" class="btn-delete" data-id="@items.product.IDProduct"><span class="btn btn-danger">Xóa</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    <div class="payment-product">
        <a href="#" id="btnContinue" class="btn btn-primary" style="margin-right:10px">Tiếp tục mua hàng</a>
        <button id="btnUpdate" class="btn btn-warning" style="margin:10px;">Cập nhật giỏ hàng</button>
        <a href="/thanh-toan" class="btn btn-success" style="margin:10px;">Thanh toán đơn hàng</a>
    </div>
}
else
{
    <div class="container">
        <h1 class="alert alert-danger" style="text-transform:uppercase">Bạn chưa có mặt hàng nào trong giỏ.</h1>
    </div>
    <br />
    <br />
    <a href="/trang-chu" class="btn btn-outline-primary">Quay lại trang chủ</a>
}


