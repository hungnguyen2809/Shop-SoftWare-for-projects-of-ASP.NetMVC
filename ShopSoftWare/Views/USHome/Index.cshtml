}

@section sologan{
    <div class="container">
        <div class="row slogan-main">
            <div class="slogan col-md-4 col-12">
                <div>
                    <img src="/Assets/client/images/safe.png" alt="safe" class="img-fluid">
                </div>
                <div>
                    <h4>Bản quyền</h4>
                    <span>100 % từ nhà sản xuất</span>
                </div>
            </div>
            <div class="slogan col-md-4 col-12">
                <div>
                    <img src="/Assets/client/images/update.png" alt="safe" class="img-fluid">
                </div>
                <div>
                    <h4>Cập nhật</h4>
                    <span>Cập nhật liên tục, Trọn đời sản phẩm</span>
                </div>
            </div>
            <div class="slogan col-md-4 col-12">
                <div>
                    <img src="/Assets/client/images/hotline.png" alt="safe" class="img-fluid">
                </div>
                <div>
                    <h4>HỖ TRỢ ONLINE 24/7</h4>
                    <span>Linh hoạt, bảo mật, thân thiện</span>
                </div>
