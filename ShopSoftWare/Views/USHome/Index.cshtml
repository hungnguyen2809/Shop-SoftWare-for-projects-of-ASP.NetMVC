        </div>
    </div>
}

@section titlePage {Trang chủ}

@section stylePage{
    <link rel="stylesheet" href="/Assets/client/css/stytleHome.css">
    }

<!-- Windows -->
<h5><a href="/key-windows">Bản quyền Windows</a></h5>
<div class="row">
    @foreach (var item in listWin)
    {
        <div class="col-md-4 col-6 content-product">
            <div>
                <img src="@item.Images" class="img-fluid" alt="key-ban-quyen-windows">
            </div>
            <div class="name-price">
                <a href="/chi-tiet-san-pham/@item.IDProduct">@item.NameProduct</a>
                <p class="text-danger">@(item.Price.Value.ToString() == null ? "Liên hệ" : "GIÁ: " + item.Price.Value.ToString("N0") + " VND")</p>
                @if (item.Quantity <= 0)
                {
                    <p class="btn btn-danger">Hết hàng</p>
                }
                else
                {
                    <a class="btn btn-success" href="/them-gio-hang?id=@item.IDProduct&quantity=1">Thêm vào giỏ</a>
                }
            </div>
        </div>
    }
</div>

