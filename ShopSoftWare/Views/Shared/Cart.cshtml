@model List<ShopSoftWare.Models.CartItem>

@{ 
    var totalProduct = 0;
    foreach( var items in Model)
    {
        totalProduct += items.quantity;
    }

    var customer = (ShopSoftWare.Models.Customer)ViewBag.InforCustomer;
}
<div>
    <span></span>
</div>
<div class="account-cart">
    @if (customer.Name != null)
    {
        <p>@customer.Name</p>
        <a href="/gio-hang" class="nav-link">
            <img src="/Assets/client/images/icon-cart.png" alt="cart" height="35">
            @if (Model.Count > 0)
            {
                <span class="badge badge-secondary bg-danger">@totalProduct</span>
            }
            else
            {
                <span class="badge badge-secondary bg-danger">0</span>
            }
        </a>
        <a href="/dang-xuat">Đăng xuất</a>
    }
    else
    {
        <p><a href="/dang-nhap">Đăng nhập</a></p>
        <a href="/gio-hang" class="nav-link">
            <img src="/Assets/client/images/icon-cart.png" alt="cart" height="35">
            @if (Model.Count > 0)
            {
                <span class="badge badge-secondary bg-danger">@totalProduct</span>
            }
            else
            {
                <span class="badge badge-secondary bg-danger">0</span>
            }
        </a>
        <a href="/dang-ky">Đăng ký</a>
    }

</div>
